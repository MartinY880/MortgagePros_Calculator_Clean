{
  "name": "mortgagepros-calculator",
  "productName": "MortgagePros Calculator",
  "version": "12.0.0",
  "description": "Professional mortgage calculator application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "sync-version": "node sync-version.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build-installer": "electron-builder --win nsis",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "mortgage",
    "calculator",
    "finance",
    "electron"
  ],
  "author": "MortgagePros",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "png-to-ico": "^3.0.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.0",
    "jspdf": "^3.0.2",
    "papaparse": "^5.5.3"
  },
  "build": {
    "appId": "com.mortgagepros.calculator",
    "productName": "MortgagePros Calculator",
    "compression": "maximum",
    "removePackageScripts": true,
    "files": [
      "src/**/*",
      "main.js",
      "preload.js",
      "assets/icon.ico",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,*.txt}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*/{spec,docs,doc,website,images,assets}",
      "!**/node_modules/.bin",
      "!**/node_modules/*/man",
      "!**/node_modules/*/docs",
      "!**/node_modules/*/{*.d.ts,*.map}",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/*.{md,txt}",
      "!**/LICENSE*",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!dist*/**/*",
      "!build*/**/*",
      "!installer.*",
      "!**/Intune-Deployment-Guide.md",
      "!**/*.ps1",
      "!**/*.pfx",
      "!**/*.cer",
      "!**/*.zip"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist-installer"
    },
    "extraResources": [],
    "asarUnpack": [],
    "fileAssociations": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "executableName": "MortgagePros Calculator"
    },
    "electronLanguages": [
      "en-US"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "MortgagePros Calculator",
      "perMachine": false,
      "runAfterFinish": false,
      "artifactName": "${productName} Setup ${version}.exe",
      "differentialPackage": false,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeader": "icon.ico",
      "installerSidebar": "icon.ico",
      "warningsAsErrors": false,
      "displayLanguageSelector": false,
      "language": "1033"
    },
    "appx": {
      "applicationId": "MortgageProsCaltulator",
      "identityName": "MortgagePros.Calculator",
      "publisher": "CN=MortgagePros",
      "publisherDisplayName": "MortgagePros",
      "backgroundColor": "#0066CC",
      "showNameOnTiles": true,
      "languages": [
        "en-US"
      ],
      "setBuildNumber": true,
      "addAutoLaunchExtension": false
    }
  }
}
